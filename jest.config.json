{
  "verbose": true,
  "testTimeout": 60000,
  "testMatch": [
    "<rootDir>/tests/**/*.spec.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/src/"
  ],
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/errors/*.ts",
    "!src/types/*.ts"
  ],
  "transform": {
    ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/src/$1"
  },
  "coverageDirectory": "<rootDir>/coverage",
  "clearMocks": true,
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  }
}
